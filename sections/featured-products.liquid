{%- style -%}
  .products-section {
    padding: calc(var(--spacing-unit) * 8) 0;
    background-color: var(--color-background);
  }

  .products-section__header {
    text-align: center;
    margin-bottom: calc(var(--spacing-unit) * 6);
  }

  .products-section__title {
    font-size: 2.5rem;
    color: var(--color-text);
    margin-bottom: calc(var(--spacing-unit) * 2);
  }

  .products-section__description {
    font-size: 1.125rem;
    color: var(--color-text);
    max-width: 600px;
    margin: 0 auto;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: calc(var(--spacing-unit) * 4);
  }

  .product-card {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    text-align: center;
    transition: transform 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-4px);
  }

  .product-card__image {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
  }

  .product-card__content {
    padding: calc(var(--spacing-unit) * 3);
  }

  .product-card__title {
    font-size: 1.5rem;
    margin-bottom: calc(var(--spacing-unit) * 2);
    color: var(--color-text);
  }

  .product-card__description {
    font-size: 1rem;
    color: var(--color-text);
    margin-bottom: calc(var(--spacing-unit) * 3);
  }

  .product-card__button {
    width: 100%;
  }

  @media screen and (max-width: 768px) {
    .products-grid {
      grid-template-columns: 1fr;
      gap: calc(var(--spacing-unit) * 3);
    }
  }
{%- endstyle -%}

<div class="products-section">
  <div class="container">
    <div class="products-section__header">
      <h2 class="products-section__title">Our Products</h2>
      <p class="products-section__description">Discover our range of sustainable hygiene products designed for adventurers, travelers, and eco-conscious individuals.</p>
    </div>

    <div class="products-grid">
      <div class="product-card">
        <img src="{{ 'product-1.jpg' | asset_url }}" alt="Buff Wipes" class="product-card__image">
        <div class="product-card__content">
          <h3 class="product-card__title">Buff Wipes</h3>
          <p class="product-card__description">Biodegradable bamboo wipes for on-the-go freshness. Perfect for hiking, camping, or travel.</p>
          <a href="/products/buff-wipes" class="button product-card__button">Learn More</a>
        </div>
      </div>

      <div class="product-card">
        <img src="{{ 'product-2.jpg' | asset_url }}" alt="Natural Soap Bars" class="product-card__image">
        <div class="product-card__content">
          <h3 class="product-card__title">Natural Soap Bars</h3>
          <p class="product-card__description">Plastic-free, all-natural soap bars that are safe for you and safe for rivers and lakes.</p>
          <a href="/products/natural-soap-bars" class="button product-card__button">Learn More</a>
        </div>
      </div>

      <div class="product-card">
        <img src="{{ 'product-3.jpg' | asset_url }}" alt="Coming Soon" class="product-card__image">
        <div class="product-card__content">
          <h3 class="product-card__title">Coming Soon</h3>
          <p class="product-card__description">New sustainable products in development. Stay tuned for eco-friendly additions to our collection.</p>
          <button class="button product-card__button">Notify Me</button>
        </div>
      </div>
    </div>
  </div>
</div>

